decl 
    // external functions
    int write_int(int x);
    int write_str(str s);
    int read_int(int *x);
    
    int add_array(int *a, int size);
    int arr[100000000];
    int _;
enddecl

int add_array(int *a, int size)
{
    decl int sum, n; int index; enddecl
    begin 
        sum = 0;
        n = 0;
        while(n < size) do
            sum = sum + *(a + n * 4);
            n = n + 1;
        endwhile;
        return sum;
    end
}

